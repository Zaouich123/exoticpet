@page "/animals"
@attribute [Authorize]
@using exoticPet.WebApp.Clients
@inject IAnimalClient AnimalClient

<PageTitle>Animals</PageTitle>

<h3>Animals</h3>

<AuthorizeView Roles="gestionnaire">
    <Authorized>
        <AddAnimalForm OnAnimalAdded="LoadAnimals" />
    </Authorized>
    <NotAuthorized>
        <div class="alert alert-info">You need the 'gestionnaire' role to add animals.</div>
    </NotAuthorized>
</AuthorizeView>

<hr />

@if (animals == null)
{
    <p>Loading animals...</p>
}
else if (!animals.Any())
{
    <p>No animals found. Add some animals to get started!</p>
}
else
{
    <div class="row">
        @foreach (var animal in animals)
        {
            <div class="col-md-4 mb-3">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">@animal.Name</h5>
                        <p class="card-text mb-1"><strong>Species:</strong> @animal.Species</p>
                        <p class="card-text mb-1"><strong>Environment:</strong> @(animal.Environment?.Name ?? "N/A")</p>
                        <p class="card-text mb-1"><strong>Price:</strong> @animal.Price.ToString("0.00") â‚¬</p>
                        <p class="card-text"><small>@animal.Specifications</small></p>
                        <button class="btn btn-success btn-sm mt-2" @onclick="() => Purchase(animal.Id)" disabled="@isPurchasing">
                            @if (isPurchasing) { <span class="spinner-border spinner-border-sm me-1" role="status"></span> }
                            Buy
                        </button>
                    </div>
                </div>
            </div>
        }
    </div>
}

@code {
    private List<Animal>? animals = null;
    private bool isPurchasing;

    protected override async Task OnInitializedAsync()
    {
        await LoadAnimals();
    }

    private async Task LoadAnimals()
    {
        animals = await AnimalClient.GetAnimalsAsync();
    }

    private async Task Purchase(int animalId)
    {
        isPurchasing = true;
        try
        {
            var ok = await AnimalClient.PurchaseAnimalAsync(animalId);
            if (ok)
            {
                animals = animals?.Where(a => a.Id != animalId).ToList();
            }
        }
        finally
        {
            isPurchasing = false;
        }
    }
}
